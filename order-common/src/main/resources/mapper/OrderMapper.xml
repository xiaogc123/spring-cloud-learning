<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaogc.ordercommon.dao.OrderDao">
    
    <resultMap id="BaseResultMap" type="com.xiaogc.ordercommon.dao.domain.OrderDO">
        <id column="id" property="id" jdbcType="BIGINT"></id>
        <result column="user_id" property="userId" jdbcType="BIGINT"></result>
        <result column="product_id" property="productId" jdbcType="BIGINT"></result>
        <result column="pay_amount" property="payAmount" jdbcType="DECIMAL"></result>
    </resultMap>
    
    <insert id="saveOrder" parameterType="com.xiaogc.ordercommon.dao.domain.OrderDO" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO orders (user_id, product_id, pay_amount) VALUES (#{userId}, #{productId}, #{payAmount})
    </insert>
</mapper>